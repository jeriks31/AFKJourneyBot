<Window x:Class="AFKJourneyBot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AFKJourneyBot.UI"
        mc:Ignorable="d"
        Title="AFK Journey Bot"
        Height="720"
        Width="1100"
        Background="{StaticResource Brush.WindowBackground}">
    <Border Background="{StaticResource Brush.WindowBackground}" Padding="16">
    <Grid Background="{StaticResource Brush.WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderBrush="{StaticResource Brush.PanelBorder}"
                    Background="{StaticResource Brush.PanelBackground}"
                    BorderThickness="1"
                    Padding="12"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Tasks" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <ItemsControl ItemsSource="{Binding Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Name}"
                                        Height="32"
                                        Margin="0,0,0,8"
                                        Command="{Binding DataContext.RunTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button Content="Pause" Height="32" Margin="0,8,0,0" Command="{Binding PauseCommand}"/>
                    <Button Content="Stop" Height="32" Margin="0,8,0,0" Command="{Binding StopCommand}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2"
                    BorderBrush="{StaticResource Brush.PanelBorder}"
                    Background="{StaticResource Brush.PanelBackground}"
                    BorderThickness="1"
                    Padding="12"
                    CornerRadius="6">
                <Grid>
                    <Image Source="{Binding PreviewImage}" Stretch="Uniform"/>
                    <TextBlock Text="Live Preview"
                               Foreground="{StaticResource Brush.TextSecondary}"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Margin="4"/>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="1"
                BorderBrush="{StaticResource Brush.PanelBorder}"
                Background="{StaticResource Brush.PanelBackground}"
                BorderThickness="1"
                Padding="12"
                CornerRadius="6">
            <DockPanel>
                <TextBlock Text="Logs" FontSize="16" FontWeight="SemiBold" DockPanel.Dock="Top" Margin="0,0,0,8"/>
                <ListBox ItemsSource="{Binding Logs}"
                         local:AutoScrollBehavior.IsEnabled="True"
                         Background="#0E1117"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Message}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource Brush.LogInfo}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                <Setter Property="Foreground" Value="{StaticResource Brush.LogWarning}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                                <Setter Property="Foreground" Value="{StaticResource Brush.LogError}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="Fatal">
                                                <Setter Property="Foreground" Value="{StaticResource Brush.LogError}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
    </Grid>
    </Border>
</Window>
